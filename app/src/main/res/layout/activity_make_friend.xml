<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeFriendActivity">

    <ImageView
        android:id="@+id/imageview_makefriend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="696dp"
        android:background="@drawable/round_back_light_10"
        android:padding="6dp"
        android:src="@drawable/search_icon" />

    <EditText
        android:id="@+id/findfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your friend phone number"
        android:layout_toEndOf="@+id/imageview_makefriend" />

    <Button
        android:id="@+id/btnMakeFriend"
        android:layout_width="169dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="493dp"
        android:text="Make Friend" />

</RelativeLayout>